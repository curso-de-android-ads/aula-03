<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/azul_titulo"/>
            <stroke android:width="1dp" android:color="@color/azul_subtitulo"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
        <solid android:color="@color/azul_subtitulo"/>
        <stroke android:width="1dp" android:color="@color/azul_titulo"/>
        <corners android:radius="3dp"/>
        </shape>
    </item>

</selector>
