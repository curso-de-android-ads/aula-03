<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="fonte_titulo">
        <item name="android:textSize">@dimen/texto_titulo</item>
        <item name="android:textColor">@color/azul_titulo</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="texto_botao">
        <item name="android:textSize">@dimen/texto_conteudo</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">monospace</item>
    </style>





</resources>
